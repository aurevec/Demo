<%= form_tag '/login' do %>
	<fieldset>
		<legend>Log In</legend>
		
		<div>
			<label for="name">Login:</label>
			<%= text_field_tag :login, params[:login] %>
		</div>
		
		<div>
			<label for="password">Password:</label>
			<%= password_field_tag :password, params[:password] %>
		</div>
		
		<div>
			<%= submit_tag "Login" %>
		</div>
	</fieldset>
<% end %>